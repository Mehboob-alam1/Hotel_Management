<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    android:background="#00034F"

    tools:context=".ui.LoginActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:background="@drawable/dialoge_background"
        android:gravity="center_vertical"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp">


        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:fontFamily="@font/inter"
            android:layout_marginBottom="40dp"
            android:padding="2dp"
            android:text="Sign-in"
            android:textAlignment="center"

            android:textColor="@color/black"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="80dp"
            android:layout_marginBottom="8dp"
android:fontFamily="@font/inter_medium"
            android:padding="2dp"
            android:text="Room No"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/editText_RoomNo"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
android:inputType="number"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="80dp"
            android:layout_marginBottom="16dp"
            android:drawableRight="@drawable/send"
            android:drawablePadding="10dp"
            android:hint="23"
            android:paddingStart="10dp"
            android:textAlignment="textStart" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="80dp"
            android:layout_marginBottom="8dp"
android:fontFamily="@font/inter_medium"
            android:padding="2dp"
            android:text="Pin"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/editText_Pin"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:inputType="number"

            android:layout_marginStart="80dp"
            android:layout_marginEnd="80dp"
            android:layout_marginBottom="24dp"
            android:drawableRight="@drawable/send"
            android:drawablePadding="10dp"
            android:hint="*****"
            android:paddingStart="10dp"
            android:textAlignment="textStart" />


        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnLogin"
            android:layout_gravity="center"
            android:background="@drawable/gradient"
            android:fontFamily="@font/gothic_a1_medium"
            android:paddingStart="80dp"
            android:paddingEnd="80dp"
            android:text="Sign_in"
            android:textAllCaps="false"
            android:textColor="@color/white" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>